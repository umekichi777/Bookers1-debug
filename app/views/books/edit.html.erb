    </div>
  <% end %>

<%= form_with model: @book, url: book_path(@book.id) , method: :patch, local: true do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<%= link_to 'Show', book_path(@book.id), class: "show_#{@book.id}" %> |
